<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :iso_9999_v2011_category %>
    <%= f.input :solves_problem %>
    <%= f.input :associated_diagnosis %>
    <%= f.input :seller %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
