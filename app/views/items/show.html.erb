<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => Item %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @item.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @item.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:iso_9999_v2011_category) %></dt>
      <dd><pre class="prettyprint"><%= @item.iso_9999_v2011_category %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:solves_problem) %></dt>
      <dd><pre class="prettyprint"><%= @item.solves_problem %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:associated_diagnosis) %></dt>
      <dd><pre class="prettyprint"><%= @item.associated_diagnosis %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:seller) %></dt>
      <dd><pre class="prettyprint"><%= @item.seller %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              items_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_item_path(@item), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              item_path(@item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

